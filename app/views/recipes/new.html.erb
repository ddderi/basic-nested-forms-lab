
<%= form_for @recipe do |f| %>
    <%= f.label "Recipe title:" %>
    <%= f.text_field :title %> <br>
  
    <%= f.fields_for :ingredients do |ingre| %>
    <%= ingre.label :name %><br>
    <%= ingre.text_field :name%> <br>

    <%= ingre.label :quantity %><br>
    <%= ingre.text_field :quantity %> <br>
    <%end%>

    <%= f.submit  %>
<%end%>

